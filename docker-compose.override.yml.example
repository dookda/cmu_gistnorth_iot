# docker-compose.override.yml
# This file is automatically loaded by docker-compose and overrides docker-compose.yml
# Use this for local development customizations
# DO NOT commit this file to version control

version: '3.8'

services:
  app:
    # Override with local development settings
    environment:
      - NODE_ENV=development
      - DEBUG=*
    
    # Mount additional volumes for development
    volumes:
      - ./:/app
      - /app/node_modules
    
    # Use development command
    command: npm run dev
    
    # Add custom ports or expose additional services
    # ports:
    #   - "9229:9229"  # Node.js debugger
