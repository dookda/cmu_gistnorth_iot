{
    "watch": [
        "server.js",
        "public/**/*"
    ],
    "ext": "js,json,html,css",
    "ignore": [
        "node_modules/",
        "*.log",
        ".git/",
        ".docker/"
    ],
    "delay": 1000,
    "verbose": true,
    "env": {
        "NODE_ENV": "development"
    },
    "events": {
        "restart": "echo 'ðŸ”„ Server restarting due to file changes...'"
    },
    "colours": true,
    "legacyWatch": false,
    "restartable": "rs"
}